{
  "compilerOptions": {
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDirs": ["src"],
    "outDir": "./dist",
    "lib": ["es2023"],
    "target": "es2023",
    "module": "esnext",
    "strictPropertyInitialization": false,  
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "sourceMap": true,
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"],    
  },
  "include": [
    "src/**/*",
    "env.d.ts",
    "jest.config.ts"
, "tests/controllers", "tests/repository"  ],
  "exclude": [
    "./node_modules/*",
    "node_modules",  
    "./tests/**/*",
    "tests"  
  ],
  "files": ["env.d.ts"],
  
}
